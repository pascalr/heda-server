<!doctype html>
<html lang="en">
  <head>
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/build/prose_mirror.css">
    <link rel="stylesheet" href="/build/imports.css">
  </head>
  <body>
    <%- include('partials/navbar') %>
    <nav class="nav d-flex">
      <div></div>
      <div class="flex-grow-1"></div>
      <% if (user) {Â %>
        <div class="dropdown">
          <a class="nav-link dropdown-toggle" style="color: black;" href="#" id="dropdownMenuButton" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="/icons/person.svg" height="20"></img>
            <%- user.name %>
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a href="/todo" class="dropdown-item">Mon profil</a>
            <form action="/logout" method="post">
              <button class="dropdown-item" type="submit">Logout</button>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form>
            <hr class="dropdown-divider">
            <h6 class="dropdown-header">Changer d'utilisateur</h6>
            <% users.forEach(function(usr) { %>
              <% if (usr.id == user.id) {return;} %>
              <form action="/change_user" method="post">
                <button class="dropdown-item" type="submit"><%= usr.name %></button>
                <input type="hidden" name="user_id" value="<%= usr.id %>">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              </form>
            <% }) %>
          </div>
        </div>
      <% } else { %>
        <a href="/login">Login</a>
      <% } %>
    </nav>
    <div id="root"></div>
  </body>
</html>

