<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/form.css">
  </head>
  <body>
    <div class="form-container">
      <h2><a href="<%- localeHref(req, '/') %>" style="text-decoration: none;">HedaCuisine</a></h2>
      <h1><%- tr('Sign_in', locale) %></h1>
      <% if (hasMessages) { %>
        <% messages.forEach(function(message) { %>
        <p><%= message %></p>
        <% }); %>
      <% } %>
      <form action="<%- localeHref(req, '/login/password') %>" method="post">
        <div>
          <label for="username"><%- tr('Username_or_Email', locale) %></label><br/>
          <input id="username" name="username" class="form-control" type="text" autocomplete="username" required autofocus>
        </div>
        <br/>
        <div>
          <label for="current-password"><%- tr('Password', locale) %></label><br/>
          <input id="current-password" name="password" class="form-control" type="password" autocomplete="current-password" required>
        </div>
        <br/>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn btn-primary form-control" type="submit"><%- tr('Sign_in', locale) %></button>
      </form>
      <hr>
      <p class="help">
        <%- tr('Help_signup', locale) %>
        <%- linkTo(req, tr('Sign_up', locale), "/signup") %>
      </p>
    </div>
  </body>
</html>
