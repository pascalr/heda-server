<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/login_head') %>
  </head>
  <body>
    <div class="form-container">
      <h2><a href="<%- localeHref(req, '/') %>" style="text-decoration: none;">HedaCuisine (<%- t('beta') %>)</a></h2>
      <h1><%- t('Sign_in') %></h1>
      <% if (hasMessages) { %>
        <% messages.forEach(function(message) { %>
        <p><%= message %></p>
        <% }); %>
      <% } %>
      <form action="<%- localeHref(req, '/login/password') %>" method="post">
        <div>
          <label for="username"><%- t('Username_or_Email') %></label><br/>
          <input id="username" name="username" class="form-control" type="text" autocomplete="username" required autofocus>
        </div>
        <br/>
        <div>
          <label for="current-password"><%- t('Password') %></label><br/>
          <input id="current-password" name="password" class="form-control" type="password" autocomplete="current-password" required>
        </div>
        <br/>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn btn-primary form-control" type="submit"><%- t('Sign_in') %></button>
      </form>
      <hr>
      <p class="help">
        <%- t('Help_signup') %>
        <%- linkTo(req, t('Sign_up'), "/signup") %>
        <br/>
        <%- linkTo(req, t('Forgot_password')+'?', "/forgot") %>
      </p>
    </div>
  </body>
</html>
